mixin skills(skills, classes)
    each skill in skills
        div(class=`skills ${classes}`)
            .skills__title=skill.skillType
            .skills__items
                each item in skill.skills
                    -var prc = 307.87582 * (item.percent/100)
                    .circle.skills__item
                        .circle__title=item.name
                        svg.circle__svg(viewbox='0 0 110 110')
                            circle.circle__first(
                                r='50',
                                cx='50%',
                                cy='50%',
                                fill='none'
                            )
                            circle.circle__second(
                                r='50',
                                cx='50%',
                                cy='50%',
                                transform='rotate(-90 55 55)'
                                stroke-dasharray=`${prc} 307.87582`
                        )

